<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@android:color/white"
        android:id="@+id/app_bar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/top_app_bar_new_post"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
            app:title="@string/new_post"
            style="@style/MaterialToolbar"
            android:theme="@style/ToolbarTheme"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/app_bar"
        app:layout_constraintBottom_toBottomOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="24dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="@string/topic"/>

            <HorizontalScrollView
                android:id="@+id/horizontal_scrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:clipToPadding="false"
                app:layout_constraintTop_toBottomOf="@id/tv_topic" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:id="@+id/btn_photography"
                            app:cornerRadius="24dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:strokeColor="@android:color/darker_gray"
                            app:strokeWidth="1dp"
                            app:icon="@drawable/ic_photography_post_icon"
                            app:iconTintMode="multiply"
                            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                            android:theme="@style/PostTopicButton" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:text="@string/photography"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal">
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:id="@+id/btn_food"
                            app:cornerRadius="24dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:strokeColor="@android:color/darker_gray"
                            app:strokeWidth="1dp"
                            app:icon="@drawable/ic_food_drink_post_icon"
                            android:paddingStart="18dp"
                            app:iconTintMode="multiply"
                            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                            android:theme="@style/PostTopicButton" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:text="@string/food_and_drink"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal">
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:id="@+id/btn_travel"
                            app:cornerRadius="24dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:strokeColor="@android:color/darker_gray"
                            app:strokeWidth="1dp"
                            android:paddingStart="17dp"
                            app:icon="@drawable/ic_travel_post_icon"
                            app:iconTintMode="multiply"
                            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                            android:theme="@style/PostTopicButton" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:text="@string/travel"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal">
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:id="@+id/btn_activity"
                            app:cornerRadius="24dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:strokeColor="@android:color/darker_gray"
                            app:strokeWidth="1dp"
                            app:icon="@drawable/ic_local_stories_post_icon"
                            android:paddingStart="15dp"
                            app:iconTintMode="multiply"
                            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                            android:theme="@style/PostTopicButton" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:text="@string/activity"/>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/horizontal_scrollview"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/tv_topic"
                android:text="@string/title"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/LoginEditext"
                android:inputType="textMultiLine"
                android:id="@+id/ed_title"
                android:hint="@string/enter_post_title"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title"/>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ed_title"
                app:layout_constraintStart_toStartOf="@id/tv_topic"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="@string/description"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/LoginEditext"
                android:inputType="textMultiLine"
                android:id="@+id/ed_description"
                android:hint="@string/enter_post_description"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintTop_toBottomOf="@id/tv_description"/>

            <TextView
                android:id="@+id/tv_photos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ed_description"
                app:layout_constraintStart_toStartOf="@id/tv_topic"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="@string/photos"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_photos"
                app:layout_constraintLeft_toLeftOf="parent"
                android:paddingHorizontal="24dp"
                android:clipToPadding="false"
                android:id="@+id/rcv_photos"/>

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rcv_photos"
                app:layout_constraintStart_toStartOf="@id/tv_topic"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="@string/location"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/add_location"
                app:layout_constraintTop_toBottomOf="@id/tv_location"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="5dp">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/btn_add_location"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:backgroundTint="@color/dark_gray"
                    app:strokeColor="@android:color/darker_gray"
                    app:strokeWidth="1dp"
                    app:icon="@drawable/ic_baseline_add_location_24"
                    app:iconTint="#FFFFFF"
                    app:iconSize="80dp"
                    app:iconGravity="textTop"
                    android:layout_marginHorizontal="24dp"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                    android:theme="@style/FormButton" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/imv_static_map"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"
                    android:layout_marginHorizontal="24dp"
                    android:backgroundTint="@color/dark_gray"
                    android:scaleType="centerCrop"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btn_publish"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintTop_toBottomOf="@id/add_location"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/publish"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:layout_marginTop="5dp"
                app:iconTint="@color/text_button_color"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>