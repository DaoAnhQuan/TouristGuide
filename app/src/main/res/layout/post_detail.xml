<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/post_detail_layout"
        android:background="#FFFFFF">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@android:color/white"
            android:id="@+id/app_bar">
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/top_app_bar_post_detail"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
                style="@style/MaterialToolbar"
                android:theme="@style/ToolbarTheme"/>
        </com.google.android.material.appbar.AppBarLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imv_avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toBottomOf="@+id/app_bar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:civ_circle_background_color="@color/dark_gray"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/app_bar"
            app:layout_constraintLeft_toRightOf="@+id/imv_avatar"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_username"
            android:textSize="12sp"
            android:textColor="#757474"
            app:layout_constraintLeft_toRightOf="@id/imv_avatar"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btn_report"
            app:cornerRadius="20dp"
            app:layout_constraintTop_toTopOf="@id/tv_username"
            app:layout_constraintBottom_toBottomOf="@id/tv_time"
            app:layout_constraintRight_toRightOf="parent"
            app:strokeColor="@android:color/darker_gray"
            app:strokeWidth="1dp"
            app:icon="@drawable/ic_baseline_report_24"
            app:iconTint="@color/report_button_color"
            app:iconGravity="textStart"
            app:iconSize="24dp"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:theme="@style/PostTopicButton"
            android:layout_marginEnd="24dp"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/imv_avatar"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="#000000"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"/>
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="5dp"/>
        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/tv_location1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/image_slider"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:text="@string/post_location_click"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_post_location_click"
            app:layout_constraintTop_toBottomOf="@id/image_slider"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toRightOf="@id/tv_location1"
            android:layout_marginStart="3dp"
            android:text="@string/here"
            android:textColor="@color/dark_blue"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_location2"
            app:layout_constraintTop_toBottomOf="@id/image_slider"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_post_location_click"
            android:layout_marginStart="5dp"
            android:textColor="#000000"
            android:text="@string/post_location_click1"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@id/tv_post_location_click"
           android:layout_marginStart="24dp"
           android:layout_marginEnd="24dp"
           android:layout_marginTop="5dp"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           android:orientation="horizontal">
           <com.google.android.material.button.MaterialButton
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:id="@+id/btn_like"
               app:strokeWidth="1dp"
               app:strokeColor="@color/dark_gray"
               app:cornerRadius="0dp"
               app:icon="@drawable/ic_baseline_favorite_border_24"
               app:iconGravity="textStart"
               app:iconTint="@color/dark_gray"
               style="@style/Widget.App.Button.OutlinedButton.IconOnly"
               android:theme="@style/PostTopicButton"/>
           <com.google.android.material.button.MaterialButton
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:id="@+id/btn_comment"
               app:strokeWidth="1dp"
               app:cornerRadius="0dp"
               app:strokeColor="@color/dark_gray"
               app:icon="@drawable/ic_baseline_comment_24"
               app:iconGravity="textStart"
               app:iconTint="#1964E6"
               style="@style/Widget.App.Button.OutlinedButton.IconOnly"
               android:theme="@style/PostTopicButton"/>
           <com.google.android.material.button.MaterialButton
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:id="@+id/btn_share"
               app:strokeColor="@color/dark_gray"
               app:strokeWidth="1dp"
               app:cornerRadius="0dp"
               app:icon="@drawable/ic_baseline_share_24"
               app:iconTint="#1964E6"
               app:iconGravity="textStart"
               style="@style/Widget.App.Button.OutlinedButton.IconOnly"
               android:theme="@style/PostTopicButton"/>
       </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>