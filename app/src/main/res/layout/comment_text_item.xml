<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:background="#FFFFFF">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imv_avatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:civ_circle_background_color="@color/dark_gray"
        />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_gray_inactive_icon"
        android:theme="@style/Theme.MaterialComponents"
        android:id="@+id/cv_comment"
        app:layout_constraintLeft_toRightOf="@+id/imv_avatar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:id="@+id/tv_username"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14sp"
                android:id="@+id/tv_comment"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_time"
        app:layout_constraintTop_toBottomOf="@id/cv_comment"
        android:textSize="12sp"
        android:textColor="@color/dark_gray"
        app:layout_constraintLeft_toRightOf="@id/imv_avatar"
        android:layout_marginStart="18dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>